<%- layout("/layouts/boilerplate.ejs")%>
<div class="row mt-3">
    
    <h1 class="col-6 offset-3">login</h1>

    <div class="col-6 offset-3">
<form action="/login" class="mt-3 needs-validation" method="post" novalidate>
     <div class="mb-3">
        <label for="user" class="form-label">username</label>
        <input type="text" id="user" placeholder="enter username" class="form-control" name="username" required>
     </div>

     <div class="mb-3">
        <label for="pass" class="form-label">password</label>
        <input type="password" id="pass" class="form-control" placeholder="enter strong password" name="password" required>
     </div>

     <button class="btn btn-success">login</button>
</form>
</div>
</div>